
<script type="text/javascript">
      jQuery(document).ready(function(){
        jQuery('input[name="phone"]').keyup(function(e){
          if (/\D/g.test(this.value))
          {
            this.value = this.value.replace(/\D/g, '');
          }
        });
      });
        jQuery('input[name="name"]').keyup(function (e) {
      if (/\d+/g.test(this.value))
      {
        this.value = this.value.replace(/\d+/g,'');
      }
    });   
    </script>
    
    
