//action.php      
      <?php

if(isset($_POST['submit']))
{
    $name = $_POST['name'];
    $phone = $_POST['phone'];
    $visitor_email = $_POST['email'];
    $enquiry_msg = $_POST['message'];

    $email_from = $visitor_email;
    $email_subject = "admin";
    $email_body = "You have received a new message from the Email ID $visitor_email. \n Name: $name \n Phone Number: $phone \n Message: $enquiry_msg";

    $to1 = "admin@gmail.com";
    $headers = "From: info@admin.com";
    $headers = "Reply-To: $visitor_email \r\n";
    $headers = 'Bcc: admin@admin.com';

    //send the email
    if (mail($to1, $email_subject, $email_body, $headers)) {
        header('Location: thank-you.html');
    }
    }else{

         echo "error; you need to submit the form!";
    }

?>
    
